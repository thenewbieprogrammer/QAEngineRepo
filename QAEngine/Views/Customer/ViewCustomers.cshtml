@model IEnumerable<QAEngine.Application.Customers.Models.CustomerListModel>

@{ 
    var data = ViewBag.Message;
}

<h1> All Customers</h1>


<br />
<br />
<div>
    @using (Html.BeginForm("ViewCustomers", "Customer", FormMethod.Get))
    {
    <form>
        <td><button class="btn btn-default btn-primary">Edit</button></td>
        @*<td><button class="btn btn-default btn-warning">Update</button></td>
        <td><button class="btn btn-default btn-danger">Delete</button></td>*@

        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">@Html.Label("Title")</th>
                    <th scope="col">@Html.Label("Name")</th>
                    <th scope="col">@Html.Label("Address")</th>
                    <th scope="col">@Html.Label("City")</th>
                    <th scope="col">@Html.Label("Region")</th>
                    <th scope="col">@Html.Label("Country")</th>
                    <th scope="col">@Html.Label("Postal Code")</th>
                    <th scope="col">@Html.Label("Phone")</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var customer in Model)
                {

                    <tr>

                        <td>@Html.DisplayFor(m => customer.Title)</td>
                        <td>@Html.DisplayFor(m => customer.Name)</td>
                        <td>@Html.DisplayFor(m => customer.Address)</td>
                        <td>@Html.DisplayFor(m => customer.City)</td>
                        <td>@Html.DisplayFor(m => customer.Region)</td>
                        <td>@Html.DisplayFor(m => customer.Country)</td>
                        <td>@Html.DisplayFor(m => customer.PostalCode)</td>
                        <td>@Html.DisplayFor(m => customer.Phone)</td>



                    </tr>

                }


            </tbody>
        </table>



    </form>
    }

</div>

