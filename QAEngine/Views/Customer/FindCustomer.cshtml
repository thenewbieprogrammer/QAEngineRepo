                <th scope="col">@Html.Label("Country")</th>
                <th scope="col">@Html.Label("Postal Code")</th>
                <th scope="col">@Html.Label("Phone")</th>

            </tr>
        </thead>
        <tbody>

            <tr>

                <td>
                    @Html.DisplayFor(m => m.Title)
                    @Html.TextBoxFor(m => m.Title, new { @class = "form-control", @style = "display:none" })
                </td>

                <td>@Html.DisplayFor(m => m.FirstName)</td>
                <td>@Html.DisplayFor(m => m.LastName)</td>
                <td>@Html.DisplayFor(m => m.Address)</td>
                <td>@Html.DisplayFor(m => m.City)</td>
                <td>@Html.DisplayFor(m => m.Region)</td>
                <td>@Html.DisplayFor(m => m.Country)</td>
                <td>@Html.DisplayFor(m => m.PostalCode)</td>
                <td>@Html.DisplayFor(m => m.Phone)</td>

