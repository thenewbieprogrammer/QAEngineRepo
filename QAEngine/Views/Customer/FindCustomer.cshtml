<h1>Find A Customer</h1>




@model QAEngine.Application.Customers.Models.CustomerModel




@using (Html.BeginForm("FindCustomer", "Customer", FormMethod.Post))
{
    @Html.TextBoxFor(m=>m.Id, new {@class = "form-control", @id = "searchCustomer" });
    <button type="submit" class="btn btn-default form-control">Search</button>

}
<br>
<br />

<br />
@using (Html.BeginForm("FindCustomer", "Customer", FormMethod.Get))
{
    
   

    <br />
    <table class="table table-dark">
        <thead>
            <tr>

                <th scope="col">@Html.Label("Title")</th>
                <th scope="col">@Html.Label("First Name")</th>
